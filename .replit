modules = ["nodejs-20", "web"]
run = "node index.js"

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Survey App Server"

[[workflows.workflow]]
name = "Survey App Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "http-server -p 5000 -a 0.0.0.0 -c-1 --cors"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[deployment]
run = ["npx", "http-server", "-p", "5000", "-a", "0.0.0.0", "-c-1", "--cors"]
deploymentTarget = "autoscale"
